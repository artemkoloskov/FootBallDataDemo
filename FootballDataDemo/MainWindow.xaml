<Window x:Class="FootballDataDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FootballDataDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Loaded="Page_Loaded">
    <Grid>
        <StackPanel>
            <TextBox Name="nametxt"></TextBox>
            <Button Content="Добавить" Name="addBtn" Click="addBtn_Click"></Button>
            <ListView Name="playerList">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Name="playerNameList" Text="{Binding Name}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</Window>
