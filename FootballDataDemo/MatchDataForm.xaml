<Window x:Class="FootballDataDemo.MatchDataForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FootballDataDemo"
        mc:Ignorable="d"
        Title="MatchDataForm" Height="450" Width="800">
    <Grid>
        <Label x:Name="matchLabel" Content="Матч" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="18"/>

        <DataGrid x:Name="matchDataGrid" HorizontalAlignment="Left" Height="160" Margin="10,49,0,0" VerticalAlignment="Top" Width="774">
            <DataGrid.Columns>
                <DataGridTextColumn IsReadOnly="True" Binding="{Binding TitleLong}" Header="Команды участники" Width="120*"/>
                <DataGridTextColumn IsReadOnly="True" Binding="{Binding Results}" Header="Результат матча" Width="150*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
